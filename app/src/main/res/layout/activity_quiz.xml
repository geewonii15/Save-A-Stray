            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiet (1) â†”ï¸ Talkative (5)"
                android:textColor="#E0F2F1"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgNoise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton android:id="@+id/rbNoise1" android:text="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="#B2DFDB" android:textColor="#FFF"/>
                <RadioButton android:id="@+id/rbNoise2" android:text="2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="#B2DFDB" android:textColor="#FFF"/>
                <RadioButton android:id="@+id/rbNoise3" android:text="3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="#B2DFDB" android:textColor="#FFF"/>
                <RadioButton android:id="@+id/rbNoise4" android:text="4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="#B2DFDB" android:textColor="#FFF"/>
                <RadioButton android:id="@+id/rbNoise5" android:text="5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="#B2DFDB" android:textColor="#FFF"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnFindMatch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Find My Soulmate! ðŸ”Ž"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#344E41"
            android:textColor="@color/white"
            android:elevation="6dp"/>

    </LinearLayout>
</ScrollView>